source :rubygems

group :development do
  gem "rspec"
  gem "rake"
  gem "guard"
  gem "guard-rspec"
  gem "simplecov"
  gem "flog"
  gem "yard"
  gem "ci_reporter"
  gem "simplecov-rcov"
  gem "hpricot"
end

group :osx do
  gem "growl"
  gem 'rb-fsevent'
end

group :linux do
  gem "rb-inotify"
  gem "libnotify"
end

